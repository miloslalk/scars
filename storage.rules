rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /users/{uid}/drawings/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
    match /users/{uid}/avatars/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
  }
}
